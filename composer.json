{
    "name": "escola-harmonia/sistema-gestao",
    "description": "Sistema de gestão para escola de música",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "phpmailer/phpmailer": "^6.10"
    },
    "require-dev": {
      "phpunit/phpunit": "^9.0"
    },
    "autoload": {
      "psr-4": {
        "EscolaHarmonia\\": "src/"
      }
    },
    "scripts": {
      "test": "phpunit",
      "install-deps": "composer install --no-dev --optimize-autoloader"
    },
    "config": {
      "optimize-autoloader": true,
      "sort-packages": true
    }
  }
